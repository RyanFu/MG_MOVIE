<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_listview_item_height"
    android:layout_gravity="center_vertical"
    android:orientation="horizontal" >

    <ImageView
        android:id="@id/item_img_icon"
        android:layout_width="@dimen/home_listview_item_img_width"
        android:layout_height="@dimen/home_listview_item_img_width"
        android:contentDescription="@string/imageviewconscrip" />

    <TextView
        android:id="@id/item_title"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/home_listview_item_img_width"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/item_img_icon"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/home_arrow_icon"
        android:contentDescription="@string/imageviewconscrip" />

</RelativeLayout>